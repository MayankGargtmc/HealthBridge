# Django Backend Environment Variables

# Security
DEBUG=True
SECRET_KEY=django-insecure-healthbridge-hackathon-change-this-in-production

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (using SQLite for hackathon, uncomment for PostgreSQL)
# DATABASE_URL=postgres://user:password@localhost:5432/healthbridge

# MongoDB (for raw document storage)
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB_NAME=healthbridge

# Eka Care API
# Get your API key from: https://developer.eka.care
EKA_API_KEY=
EKA_API_BASE_URL=https://api.eka.care

# OpenAI API (fallback)
# Get your API key from: https://platform.openai.com
OPENAI_API_KEY=

# Celery (optional, for async processing)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
